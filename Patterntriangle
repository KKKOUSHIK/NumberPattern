
#include <iostream>

int main() {
    // Write C++ code here
    int n;
      scanf("%d",&n);
    int a=1,b=(n*n)+1,i,j,k,l;
  
    for(i=n;i>0;i--){
        for(j=0;j<n-i;j++){
            printf("--");
        }
        for(k=0;k<i;k++){
            printf("%d*",a++);
        }
        for(l=0;l<i-1;l++){
            printf("%d*",b++);
        }
        printf("%d",b);
        b=b-2*(i-1);
        printf("\n");
        
    }
    
    

    return 0;
}
